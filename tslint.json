{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier",
    "tslint-react"
  ],
  "rules": {
    "indent": [true, "spaces", 4],
    "no-default-export": true,
    "prefer-const": true,
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "no-unused-variable": true,
    "jsx-no-multiline-js": false
  }
}